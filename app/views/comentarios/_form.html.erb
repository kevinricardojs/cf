<%= form_for(@comentario) do |f| %>
  <% if @comentario.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@comentario.errors.count, "error") %> impide que este mesaje sea guardado</h3>

      <ul>
      <% @comentario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :correo, "Email" %><br>
    <%= f.text_field :correo %>
  </div>
  <div class="field">
    <%= f.label :mensaje, "Mensaje" %><br>
    <%= f.text_area :mensaje %>
  </div>
  <div class="actions">
    <%= f.submit "Enviar" %>
  </div>
<% end %>
